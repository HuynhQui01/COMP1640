@page
@model LogoutModel
@{
    Layout = "~/Views/Shared/UserLO.cshtml";
}

<div class="card shadow mb-4" style="width: 70%; margin: 0 auto">
    <div class="card-header py-3">
        <h2 class="text-center m-0 font-weight-bold text-primary">Are you sure to Logout?</h6>
    </div>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark-center" style="margin: 0 auto;">Click here to Logout</button>
            </form>
        }
        else
        {
            <p class="text-center">You have successfully logged out of the application.</p>
        }
    }
</div>

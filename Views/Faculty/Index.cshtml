@model IEnumerable<Comp1640.Models.Faculty>

@{
    Layout = "~/Views/Shared/AdminLO.cshtml";

}
<style>
    tr>td {
        border-bottom: black solid 1px !important;
    }
</style>

<body>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-danger text-center" style="font-size: 40px;">Faculties Management</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class=""><a class="btn btn-primary" asp-action="Create">Create New</a></div>
                <table class="table table-bordered" id="datatables" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Faculty's Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FacName)
                                </td>
                                <td style="width: fit-content;">
                                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.FacId">Edit</a> |
                                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.FacId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>

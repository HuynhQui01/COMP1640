@model dynamic
@{
    Layout = "~/Views/Shared/AdminLO.cshtml";

}
<style>
    #div {
        display: flex;
        justify-content: center;
    }


    #wchart {
        border-radius: 20px;
        box-shadow: 5px 8px #d9d9d9;
    }

    #mchart {
        border-radius: 20px;
        box-shadow: 5px 8px #d9d9d9;
    }

    #contain {
        display: flex;
        justify-content: center;
        width: 80%;
        margin-left: 10%;
    }
</style>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<h2>Exception Reports</h2>

<div class="row mt-4" id="contain">
    <div class="col-lg-4 col-md-6 mt-4 mb-4" style="border-radius: 20px; margin-right: 5%">
        <div class="card z-index-2 " style="border-radius: 20px; box-shadow: 5px 8px #d9d9d9;">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2 bg-transparent">
                <div class="border-radius-lg py-3 pe-1" style="background-color: #e8f8df;" id="wchart">
                    <div class="chart">
                        <canvas id="myChart" width="400" height="400"></canvas>

                        <script>
                            var ctx = document.getElementById('myChart').getContext('2d');
                            var count = @ViewBag.ConNoComment;
                            var myChart = new Chart(ctx, {
                                type: 'bar',
                                data: {
                                    labels: ['Contributions Without Comment'],
                                    datasets: [{
                                        label: 'Number of Contributions',
                                        data: [count],
                                        backgroundColor: [
                                            'rgba(255, 99, 132, 0.2)',
                                        ],
                                        borderColor: [
                                            'rgba(255, 99, 132, 1)',
                                        ],
                                        borderWidth: 1
                                    }]
                                },
                                options: {
                                    scales: {
                                        y: {
                                            beginAtZero: true
                                        }
                                    }
                                }
                            });
                        </script>

                    </div>
                </div>
            </div>
            <div class="card-body">
                <h6 class="mb-0 ">Number of contributions Without comment</h6>
                <p class="text-sm "></p>
                <hr class="dark horizontal">
                <div class="d-flex ">
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6 mt-4 mb-4" style="border-radius: 20px; margin-right: 5%">
        <div class="card z-index-2 " style="border-radius: 20px; box-shadow: 5px 8px #d9d9d9;">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2 bg-transparent">
                <div class="border-radius-lg py-3 pe-1" style="background-color: #c4fff0;" id="wchart">
                    <div class="chart">
                        <canvas id="contributionsWithoutCommentIn14DaysChart" width="400" height="400"></canvas>

                        <script>
                            var ctx = document.getElementById('contributionsWithoutCommentIn14DaysChart').getContext('2d');
                            var count = @ViewBag.ConNoComment14;
                            var myChart = new Chart(ctx, {
                                type: 'bar',
                                data: {
                                    labels: ['Contributions Without Comment After 14 Days'],
                                    datasets: [{
                                        label: 'Number of Contributions',
                                        data: [count],
                                        backgroundColor: [
                                            'rgba(255, 99, 132, 0.2)',
                                        ],
                                        borderColor: [
                                            'rgba(255, 99, 132, 1)',
                                        ],
                                        borderWidth: 1
                                    }]
                                },
                                options: {
                                    scales: {
                                        y: {
                                            beginAtZero: true
                                        }
                                    }
                                }
                            });
                        </script>

                    </div>
                </div>
            </div>
            <div class="card-body">
                <h6 class="mb-0 ">Number of contributions Without comment</h6>
                <p class="text-sm "></p>
                <hr class="dark horizontal">
                <div class="d-flex ">
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4 col-md-6 mt-4 mb-4" style="border-radius: 20px; margin-right: 5%">
        <div class="card z-index-2 " style="border-radius: 20px; box-shadow: 5px 8px #d9d9d9;">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2 bg-transparent">
                <div class="border-radius-lg py-3 pe-1" style="background-color: #fadeff;" id="wchart">
                    <div class="chart">
                        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
                        <canvas id="contributionsChart" width="400" height="200"></canvas>

                        <script>
                            // Get chart data from model
                            var labels = @Html.Raw(Json.Serialize(Model.Labels));
                            var datasets = @Html.Raw(Json.Serialize(Model.DataSets));

                            // Prepare data for Chart.js
                            var data = {
                                labels: labels,
                                datasets: datasets.map(function (dataset) {
                                    return {
                                        label: dataset.Label,
                                        data: dataset.Data,
                                        backgroundColor: getRandomColor(), // Function to generate random colors
                                        borderWidth: 1
                                    };
                                })
                            };

                            // Create Chart.js chart
                            var ctx = document.getElementById('contributionsChart').getContext('2d');
                            var chart = new Chart(ctx, {
                                type: 'bar',
                                data: data,
                                options: {
                                    scales: {
                                        y: {
                                            beginAtZero: true
                                        }
                                    }
                                }
                            });

                            // Function to generate random colors
                            function getRandomColor() {
                                var letters = '0123456789ABCDEF';
                                var color = '#';
                                for (var i = 0; i < 6; i++) {
                                    color += letters[Math.floor(Math.random() * 16)];
                                }
                                return color;
                            }
                        </script>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <h6 class="mb-0 ">Number of contributions Without comment</h6>
                <p class="text-sm "></p>
                <hr class="dark horizontal">
                <div class="d-flex ">
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4 col-md-6 mt-4 mb-4" style="border-radius: 20px; margin-right: 5%">
        <div class="card z-index-2 " style="border-radius: 20px; box-shadow: 5px 8px #d9d9d9;">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2 bg-transparent">
                <div class="border-radius-lg py-3 pe-1" style="background-color: #fadeff;" id="wchart">
                    <div class="chart">
                        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>

                        <!-- Create canvas element for chart -->
                        <canvas id="userContributionsChart" width="400" height="200"></canvas>

                        <script>
                            // Get chart data from model
                            var labels = @Html.Raw(Json.Serialize(ViewBag.ChartData1.Labels));
                            var userCounts = @Html.Raw(Json.Serialize(ViewBag.ChartData1.UserCounts));

                            // Prepare data for Chart.js
                            var data = {
                                labels: labels,
                                datasets: [{
                                    label: 'Number of Users',
                                    data: userCounts,
                                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                                    borderColor: 'rgba(54, 162, 235, 1)',
                                    borderWidth: 1
                                }]
                            };

                            // Create Chart.js chart
                            var ctx = document.getElementById('userContributionsChart').getContext('2d');
                            var chart = new Chart(ctx, {
                                type: 'bar',
                                data: data,
                                options: {
                                    scales: {
                                        y: {
                                            beginAtZero: true,
                                            stepSize: 1
                                        }
                                    }
                                }
                            });
                        </script>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <h6 class="mb-0 ">Number of contributions Without comment</h6>
                <p class="text-sm "></p>
                <hr class="dark horizontal">
                <div class="d-flex ">
                </div>
            </div>
        </div>
    </div>
</div>
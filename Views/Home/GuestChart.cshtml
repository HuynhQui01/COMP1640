@{
    Layout = "~/Views/Shared/UserLO.cshtml";

}
<style>
    #contributionChart {
        @* width: 800px !important;
        height: 800px !important; *@
    }

    #div {
        display: flex;
        justify-content: center;
    }

    #wchart {
        border-radius: 20px;
        box-shadow: 5px 8px #d9d9d9;
    }

    #mchart {
        border-radius: 20px;
        box-shadow: 5px 8px #d9d9d9;
    }

    #contain {
        display: flex;
        justify-content: center;
        width: 80%;
        margin-left: 10%;
    }
</style>
<h2>Contribution Chart</h2>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<div class="row mt-4" id="contain">
    <div class="col-lg-4 col-md-6 mt-4 mb-4" style="border-radius: 20px; margin-right: 5%">
        <div class="card z-index-2 " style="border-radius: 20px; box-shadow: 5px 8px #d9d9d9;">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2 bg-transparent">
                <div class="border-radius-lg py-3 pe-1" style="background-color: #d6ccc2;" id="wchart">
                    <div class="chart">
                        @* <canvas id="chart-bars" class="chart-canvas" height="170"></canvas>
                        *@
                        <canvas id="contributionChart" width="400" height="400"></canvas>

                        <script>
                            var facultyNames = @Html.Raw(Json.Serialize(ViewBag.FacultyNames));
                            var contributionCounts = @Html.Raw(Json.Serialize(ViewBag.ContributionCounts));

                            var ctx = document.getElementById('contributionChart').getContext('2d');
                            var myChart = new Chart(ctx, {
                                type: 'bar',
                                data: {
                                    labels: facultyNames,
                                    datasets: [{
                                        label: 'Contribution Count',
                                        data: contributionCounts,
                                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                                        borderColor: 'rgba(54, 162, 235, 1)',
                                        borderWidth: 1
                                    }]
                                },
                                options: {
                                    scales: {
                                        y: {
                                            beginAtZero: true
                                        }
                                    }
                                }
                            });
                        </script>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <h6 class="mb-0 ">Number of contribution in your faculty</h6>
                <p class="text-sm "></p>
                <hr class="dark horizontal">
                
            </div>
        </div>
    </div>
</div>
